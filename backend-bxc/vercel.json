{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/perfil/([^/]+)",
      "destination": "/api/perfil/[uid]?uid=$1"
    },
    {
      "source": "/api/boletos/controle/([^/]+)",
      "destination": "/api/boletos?numero_controle=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}