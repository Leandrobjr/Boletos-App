{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/perfil/([^/]+)",
      "destination": "/api/perfil?uid=$1"
    },
    {
      "source": "/api/boletos/comprados/([^/]+)",
      "destination": "/api/boletos/comprados/[uid]?uid=$1"
    },
    {
      "source": "/api/boletos/usuario/([^/]+)",
      "destination": "/api/boletos/usuario/[uid]?uid=$1"
    },
    {
      "source": "/api/boletos/([^/]+)/([^/]+)",
      "destination": "/api/boletos/[id]?id=$1&action=$2"
    },
    {
      "source": "/api/boletos/([^/]+)",
      "destination": "/api/boletos/[id]?id=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}